<?xml version="1.0" ?>
<Entity type="Player"
			moveSpeed="360"
			baseHealth="100"
			baseStamina="99999999"
			baseDamage="10"
			staminaRegenerateSpeed="20"
			staminaRegenerateDelay="2"
			knockBackStrenght="50"
	>
	
	<Component type="TransformComponent">
		<Position x="-100" y="200" z="0" />
		<Rotation x="0" y="0" z="0" />
		<Scale x="0.5" y="0.5" z="0.5"/>
	</Component>
	
	<Component type="PlayerControllerComponent"
				dodgeSpeed="800"
				dodgeTime="0.2"
				dodgeStaminaConsumption="20">
	</Component>
	
	<!-- "secondsBetweenAttacks" - Time when next attack becomes possible -->
	<!-- "comboExpireTime" - Time before combo resets, if less than "secondsBetweenAttacks" then no combo is possible -->
	<Component 	type="LongSwordAttackComponent"
				secondsBetweenAttacks="0.2" 
				comboExpireTime="0.6" 
				attackRange="60"
				paddingFromBody="5"
				staminaConsumption="10">
	</Component>
	
	<Component type="AnimComponent">
		<SpriteSheet 
			path="res/Graphics/World/Player/Run/runAnim.png" 
			plistPath="res/Graphics/World/Player/Run/runAnim.plist">
			
			<Anim 	type="Run" 
					frameNamePattern="run%d.png"
					frameCount="10"
					timeBetweenFrames="0.1"/>
		</SpriteSheet>
		<SpriteSheet
			path="res/Graphics/World/Player/Idle/idleAnim.png" 
			plistPath="res/Graphics/World/Player/Idle/idleAnim.plist">
			
			<Anim 	type="Idle"			
					frameNamePattern="idle%d.png"
					frameCount="3"
					timeBetweenFrames="0.1"
			/>
		</SpriteSheet>
		<SpriteSheet
			path="res/Graphics/World/Player/Hurt/hurtAnim.png" 
			plistPath="res/Graphics/World/Player/Hurt/hurtAnim.plist"
			>
			<Anim 	type="Hurt"			
					frameNamePattern="hurt%d.png"
					frameCount="3"
					timeBetweenFrames="0.1"
			/>
		</SpriteSheet>
		<SpriteSheet
			path="res/Graphics/World/Player/Run/runAnim.png" 
			plistPath="res/Graphics/World/Player/Run/runAnim.plist"
			>
			<Anim 	type="Dodge"			
					frameNamePattern="run%d.png"
					frameCount="3"
					timeBetweenFrames="0.1"
			/>
		</SpriteSheet>
		<SpriteSheet
			path="res/Graphics/World/Player/Attack/attack.png" 
			plistPath="res/Graphics/World/Player/Attack/attack.plist"
			>
			<Anim 	type="AttackForward1"					
					frameNamePattern="AttackForward1%d.png"
					frameCount="3"
					timeBetweenFrames="0.07"
			/>		
			<Anim 	type="AttackForward2"			
					frameNamePattern="AttackForward2%d.png"
					frameCount="3"
					timeBetweenFrames="0.07"
			/>
			<Anim 	type="AttackForward3"			
					frameNamePattern="AttackForward3%d.png"
					frameCount="3"
					timeBetweenFrames="0.07"
			/>
			<Anim 	type="AttackForward4"			
					frameNamePattern="AttackForward4%d.png"
					frameCount="3"
					timeBetweenFrames="0.07"
			/>
			<Anim 	type="AttackForward5"			
					frameNamePattern="AttackForward5%d.png"
					frameCount="3"
					timeBetweenFrames="0.07"
			/>
			<Anim 	type="AttackUpward1"					
					frameNamePattern="AttackUpward1%d.png"
					frameCount="3"
					timeBetweenFrames="0.07"
			/>
			<Anim 	type="AttackUpward2"			
					frameNamePattern="AttackUpward2%d.png"
					frameCount="3"
					timeBetweenFrames="0.07"
			/>
			<Anim 	type="AttackUpward3"			
					frameNamePattern="AttackUpward3%d.png"
					frameCount="3"
					timeBetweenFrames="0.07"
			/>
			<Anim 	type="AttackUpward4"			
					frameNamePattern="AttackUpward4%d.png"
					frameCount="3"
					timeBetweenFrames="0.07"
			/>
			<Anim 	type="AttackUpward5"			
					frameNamePattern="AttackUpward5%d.png"
					frameCount="3"
					timeBetweenFrames="0.07"
			/>
			<Anim 	type="AttackDownward1"					
					frameNamePattern="AttackDownward1%d.png"
					frameCount="3"
					timeBetweenFrames="0.07"
			/>
			<Anim 	type="AttackDownward2"			
					frameNamePattern="AttackDownward2%d.png"
					frameCount="3"
					timeBetweenFrames="0.07"
			/>
			<Anim 	type="AttackDownward3"			
					frameNamePattern="AttackDownward3%d.png"
					frameCount="3"
					timeBetweenFrames="0.07"
			/>
			<Anim 	type="AttackDownward4"			
					frameNamePattern="AttackDownward4%d.png"
					frameCount="3"
					timeBetweenFrames="0.07"
			/>
			<Anim 	type="AttackDownward5"			
					frameNamePattern="AttackDownward5%d.png"
					frameCount="3"
					timeBetweenFrames="0.07"
			/>
		</SpriteSheet>					
	</Component>

	<!-- Actually collision detection body -->
	<Component type="RigidBodyComponent">
		<AnchorPosition x="0" y="0" />
		<PhysicsMaterial density="0.1" restitution="0" friction="0.3" />
		<PhysicsBody
			shape="box"
			width="110"
			height="70"
			isDynamic="true" 
			isGravityEnabled="false" 
			isRotationEnabled="false"
			collisionBitMask="1"
			forceScale="60"
			/>
	</Component>
	
	<!-- Used for taking damage from projectiles -->
	<Component type="NodeComponent">
		<Component type="RigidBodyComponent">
			<AnchorPosition x="0" y="0" />
			<PhysicsMaterial density="0.1" restitution="0.1" friction="0.3" />
			<PhysicsBody
				shape="box"
				width="100"
				height="150"
				isDynamic="false" 
				isGravityEnabled="false" 
				isRotationEnabled="false"
				collisionBitMask="4"
				forceScale="0"
				/>
		</Component>
	</Component>
	
	<!-- Flips the sprite when moving in left direction -->
	<Component type="MirrorSpriteComponent">
	</Component>
	
</Entity>
