<?xml version="1.0" ?>
<Entity type="RangeBomb"
			moveSpeed="440"
			baseHealth="40"
			baseStamina="100"
			baseDamage="10"
			staminaRegenerateSpeed="2"
			staminaRegenerateDelay="1"
			knockBackStrenght="100"
			>
			
	<Component type="TransformComponent">
		<Position x="200" y="1" z="0" />
		<Rotation x="0" y="0" z="0" />
		<Scale x="0.5" y="0.5" z="0.5"/>
	</Component>
	
	<Component  type="AIControllerComponent"
				startState="Pause">
		
		<State  type="Idle"
				onSuccess="Signaling"/>
				
		<State type="Chase"
				onSuccess="Signaling"
				chaseRadius="1000"
				stopDistance="250"/>

		<State  type="Attack"
				onSuccess="Pause"
				onFailure="Chase"/>
				
		<State 	type="Signaling"
				onSuccess="Attack"
				onFailure="Pause" 
				time="1.0"/>

		<State 	type="Pause"
				onSuccess="Signaling"
				onFailure="Chase"
				maxDistanceToTarget="560"
				isCheckingDistanceToTarget="true"
				time="0"/>

	</Component>
	
	<Component type="BackgroundAction">
		<Action type="AIAvoidTarget"
				startAvoidDistance="100"
				stopAvoidDistance="350"
				collisionCheckTimeInterval="1"
				skipAvoidStates="Idle"
				/>
	</Component>
	
	<Component type="AnimComponent">
		<SpriteSheet
			path="res/Graphics/World/AI/Thrower/throwerAnimations.png" 
			plistPath="res/Graphics/World/AI/Thrower/throwerAnimations.plist">
			
			<Anim 	type="Idle"
					frameNamePattern="thrower_idle%d.png"
					frameCount="7"
					timeBetweenFrames="0.1"
			/>
			
			<Anim 	type="Run"
					frameNamePattern="thrower_run%d.png"
					frameCount="4"
					timeBetweenFrames="0.1"
			/>
			
			<Anim 	type="Attack"
					frameNamePattern="thrower_attack%d.png"
					frameCount="1"
					timeBetweenFrames="1"
			/>
			
			<Anim	type="Signal"
					frameNamePattern="thrower_signal%d.png"
					frameCount="6"
					timeBetweenFrames="0.1"
			/>
			
			<Anim	type="Hurt"
					frameNamePattern="thrower_hurt%d.png"
					frameCount="1"
					timeBetweenFrames="1"
			/>
		</SpriteSheet>
	</Component>
	
	<Component 	type="RangedAttackComponent"
				secondsBetweenAttacks="1"
				attackRange="560">
			
		<Projectile path="res/Configs/World/Projectiles/Knife.xml">
		</Projectile>
			
	</Component>
	
	<Component type="RigidBodyComponent">
		<PhysicsMaterial density="0.1" restitution="0" friction="0.3" />
		<AnchorPosition x="0" y="0.1" />
		<PhysicsBody
			shape="box"
			width="100"
			height="50"
			isDynamic="true" 
			isGravityEnabled="false"
			isRotationEnabled="false"
			collisionBitMask="1"
			collisionCategory="1"
			forceScale="60"
			/>
	</Component>	
</Entity>
