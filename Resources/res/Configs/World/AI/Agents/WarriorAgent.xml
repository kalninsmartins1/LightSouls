<?xml version="1.0" ?>
<Entity type="WarriorAgent"
			moveSpeed="160"
			baseHealth="100"
			baseStamina="100"
			baseDamage="10"
			staminaRegenerateSpeed="2"
			>
			
	<Component type="TransformComponent">
		<Position x="2" y="1" z="0" />
		<Rotation x="0" y="0" z="0" />
		<Scale x="0.5" y="0.5" z="0.5"/>
	</Component>
	
	<Component type="AIControllerComponent"
		patrolRadius="500"
		patrolPauseInSeconds="2"
		chaseStopDistance="80"
		chaseRadius="300">
	</Component>
	
	<Component 	type="LongSwordAttackComponent"
				secondsBetweenAttacks="0.6"
				attackRange="120"
				paddingFromBody="5"
				staminaConsumption="20">
	</Component>
	
	<Component type="AnimComponent">
		<SpriteSheet type="Idle"
			path="res/Graphics/World/Player/Idle/idleAnim.png" 
			plistPath="res/Graphics/World/Player/Idle/idleAnim.plist"
			frameNamePattern="idle%d.png"
			frameCount="3"
			timeBetweenFrames="0.1"
		/>
		<SpriteSheet type="Run"
			path="res/Graphics/World/Player/Run/runAnim.png" 
			plistPath="res/Graphics/World/Player/Run/runAnim.plist"
			frameNamePattern="run%d.png"
			frameCount="10"
			timeBetweenFrames="0.1"
		/>
		<SpriteSheet type="Hurt"
			path="res/Graphics/World/Player/Hurt/hurtAnim.png" 
			plistPath="res/Graphics/World/Player/Hurt/hurtAnim.plist"
			frameNamePattern="hurt%d.png"
			frameCount="3"
			timeBetweenFrames="0.1"
		/>
		<SpriteSheet type="AttackCombo1"
			path="res/Graphics/World/Player/Attack/LightAttack1/lightAttack1Anim.png" 
			plistPath="res/Graphics/World/Player/Attack/LightAttack1/lightAttack1Anim.plist"
			frameNamePattern="lightAttack1%d.png"
			frameCount="3"
			timeBetweenFrames="0.1"
		/>
		<SpriteSheet type="AttackCombo2"
			path="res/Graphics/World/Player/Attack/LightAttack2/lightAttack2Anim.png" 
			plistPath="res/Graphics/World/Player/Attack/LightAttack2/lightAttack2Anim.plist"
			frameNamePattern="lightAttack2%d.png"
			frameCount="3"
			timeBetweenFrames="0.1"
		/>
		<SpriteSheet type="AttackCombo3"
			path="res/Graphics/World/Player/Attack/LightAttack3/lightAttack3Anim.png" 
			plistPath="res/Graphics/World/Player/Attack/LightAttack3/lightAttack3Anim.plist"
			frameNamePattern="lightAttack3%d.png"
			frameCount="3"
			timeBetweenFrames="0.1"
		/>
		<SpriteSheet type="AttackCombo4"
			path="res/Graphics/World/Player/Attack/LightAttack4/lightAttack4Anim.png" 
			plistPath="res/Graphics/World/Player/Attack/LightAttack4/lightAttack4Anim.plist"
			frameNamePattern="lightAttack4%d.png"
			frameCount="3"
			timeBetweenFrames="0.1"
		/>
		<SpriteSheet type="AttackCombo5"
			path="res/Graphics/World/Player/Attack/LightAttack5/lightAttack5Anim.png" 
			plistPath="res/Graphics/World/Player/Attack/LightAttack5/lightAttack5Anim.plist"
			frameNamePattern="lightAttack5%d.png"
			frameCount="3"
			timeBetweenFrames="0.1"
		/>
	</Component>
	
	<Component type="RigidBodyComponent">
		<PhysicsMaterial density="0.1" restitution="0.1" friction="0.3" />
		<PhysicsBody
			shape="box"
			width="150"
			height="100"
			isDynamic="true" 
			isGravityEnabled="false"
			isRotationEnabled="false"
			collisionBitMask="1"
			forceScale="100"
			/>
	</Component>
	
	<Component type="MirrorSpriteComponent">
	</Component>
	
</Entity>
