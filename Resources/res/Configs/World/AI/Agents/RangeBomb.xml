<?xml version="1.0" ?>
<Entity type="RangeBomb"
			moveSpeed="400"
			baseHealth="40"
			baseStamina="100"
			baseDamage="10"
			staminaRegenerateSpeed="2"
			staminaRegenerateDelay="1"
			knockBackStrenght="100"
			>
			
	<Component type="TransformComponent">
		<Position x="200" y="1" z="0" />
		<Rotation x="0" y="0" z="0" />
		<Scale x="0.2" y="0.2" z="0.2"/>
	</Component>
	
	<Component  type="AIControllerComponent"
				startState="Pause">
		
		<State  type="Idle"
				onSuccess="Signaling"/>
				
		<State type="Chase"
				onSuccess="Signaling"
				chaseRadius="1000"
				stopDistance="250"/>

		<State  type="Attack"
				onSuccess="Pause"
				onFailure="Chase"/>
				
		<State 	type="Signaling"
				onSuccess="Attack"
				onFailure="Pause" 
				time="1.0"/>

		<State 	type="Pause"
				onSuccess="Signaling"
				onFailure="Chase"
				maxDistanceToTarget="400"
				isCheckingDistanceToTarget="true"
				time="1.0"/>

	</Component>
	
	<Component type="BackgroundAction">
		<Action type="AIAvoidTarget"
				startAvoidDistance="100"
				stopAvoidDistance="350"
				collisionCheckTimeInterval="1"
				skipAvoidStates="Idle"
				/>
	</Component>
	
	<Component type="AnimComponent">
		<SpriteSheet
			path="res/Graphics/World/AI/RangeBomb/rangeBombAnims.png" 
			plistPath="res/Graphics/World/AI/RangeBomb/rangeBombAnims.plist">
			
			<Anim 	type="Idle"
					frameNamePattern="rangeBomb_idle%d.png"
					frameCount="1"
					timeBetweenFrames="0.1"
			/>
			
			<Anim	type="Signal"
					frameNamePattern="rangeBomb_signal%d.png"
					frameCount="2"
					timeBetweenFrames="0.1"
			/>
		</SpriteSheet>
	</Component>
	
	<Component 	type="RangedAttackComponent"
				secondsBetweenAttacks="5"
				attackRange="400">
			
		<Projectile path="res/Configs/World/Projectiles/Fireball.xml">
		</Projectile>
			
	</Component>
	
	<Component type="RigidBodyComponent">
		<PhysicsMaterial density="0.1" restitution="0" friction="0.3" />
		<AnchorPosition x="0" y="0" />
		<PhysicsBody
			shape="box"
			width="250"
			height="100"
			isDynamic="true" 
			isGravityEnabled="false"
			isRotationEnabled="false"
			collisionBitMask="2"
			collisionCategory="2"
			forceScale="60"
			/>
	</Component>	
</Entity>
