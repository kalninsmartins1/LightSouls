<?xml version="1.0" ?>
<Actor type="Player">
	<Component type="TransformComponent">
		<Position x="2" y="1" z="0" />
		<Rotation x="" y="" z="" />		
	</Component>
	
	<Component type="PlayerControllerComponent">
		<MovementParams
				moveSpeed="80"
				dodgeSpeed="100"
				dodgeTime="0.8"
		/>				
	</Component>
	
	<Component type="PlayerAnimComponent">
		<SpriteSheet type="Running"
			path="res/Graphics/Player/Run/runAnim.png" 
			plistPath="res/Graphics/Player/Run/runAnim.plist"
			frameNamePattern="run%d.png"
			frameCount="10"
			timeBetweenFrames="0.1"
		/>
		<SpriteSheet type="Idle"
			path="res/Graphics/Player/Idle/idleAnim.png" 
			plistPath="res/Graphics/Player/Idle/idleAnim.plist"
			frameNamePattern="idle%d.png"
			frameCount="3"
			timeBetweenFrames="0.1"
		/>
		<SpriteSheet type="Hurt"
			path="res/Graphics/Player/Hurt/hurtAnim.png" 
			plistPath="res/Graphics/Player/Hurt/hurtAnim.plist"
			frameNamePattern="hurt%d.png"
			frameCount="3"
			timeBetweenFrames="0.1"
		/>
		<SpriteSheet type="Dodge"
			path="res/Graphics/Player/Dodge/dodgeSpriteSheet.png" 
			plistPath="res/Graphics/Player/Dodge/dodgeData.plist"
			frameNamePattern="dodge%d.png"
			frameCount="6"
			timeBetweenFrames="0.1"
		/>
		<SpriteSheet type="Attack"
			path="res/Graphics/Player/Attack/attackAnim.png" 
			plistPath="res/Graphics/Player/Attack/attackAnim.plist"
			frameNamePattern="attack%d.png"
			frameCount="15"
			timeBetweenFrames="0.1"
		/>
	</Component>
	
	<Component type="RigidBodyComponent">
		<PhysicsMaterial density="0.1" restitution="0.1" friction="0.3" />
		<PhysicsBody
			shape="box"
			width="40"
			height="15"
			isDynamic="true" 
			isGravityEnabled="false" 
			collisionBitMask="0xFFFFFF"
			/>
	</Component>
	
	<Component type="MirrorSpriteComponent">
	</Component>
	
</Actor>
