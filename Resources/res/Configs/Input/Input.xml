<InputSettings>
	<Axis name="MoveInput">		
		<Keyboard>
			<AxisKey keyCode="W" axisType="Y" minValue="0" maxValue="1"/>
			<AxisKey keyCode="S" axisType="Y" minValue="-1" maxValue="0"/>
			<AxisKey keyCode="A" axisType="X" minValue="-1" maxValue="0"/>
			<AxisKey keyCode="D" axisType="X" minValue="0" maxValue="1"/>
		</Keyboard>
	</Axis>
	
	<ActionButton name="LightAttackInput">
		<Mouse>
			<MouseButton buttonCode="LeftButton"/>
		</Mouse>
	</ActionButton>
	
	<ActionButton name="AttackStrong">		
		<Mouse>
			<MouseButton name="RightButton"/>
		</Mouse>
	</ActionButton>
	
	<ActionButton name="Dodge">
		<Keyboard>
			<ActionKey keyCode="Space"/>
		</Keyboard>		
	</ActionButton>
	
</InputSettings>