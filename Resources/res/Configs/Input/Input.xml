<InputSettings>
	<Axis name="VerticalMovement">
		<Keyboard>
			<KeyboardAxis keyCodeFrom="W" keyCodeTo="S" valueFrom="1" valueTo="-1"/>
		</Keyboard>
		<GameController>
			<ControllerAxis axisCode="LEFT_STICK_Y" valueFrom="-1" valueTo="1"/>
		</GameController>
	</Axis>
	<Axis name="HorizontalMovement">
		<Keyboard>
			<KeyboardAxis keyCodeFrom="A" keyCodeTo="D" valueFrom="-1" valueTo="1"/>
		</Keyboard>
		<GameController>
			<ControllerAxis axisCode="LEFT_STICK_X" valueFrom="-1" valueTo="1"/>
		</GameController>
	</Axis>
	
	<Axis name="VerticalLook">
		<Mouse>
			<MouseAxis axisCode="Y" valueFrom="-1" valueTo="1"/>
		</Mouse>
		<GameController>
			<ControllerAxis axisCode="RIGHT_STICK_Y" valueFrom="-1" valueTo="1"/>
		</GameController>
	</Axis>
	
	<Axis name="HorizontalLook">
		<Mouse>
			<MouseAxis axisCode="X" valueFrom="-1" valueTo="1"/>
		</Mouse>
		<GameController>
			<ControllerAxis axisCode="RIGHT_STICK_X" valueFrom="-1" valueTo="1"/>
		</GameController>
	</Axis>
	
	<ActionButton name="LightAttackInput">
		<Mouse>
			<MouseButton buttonCode="LeftButton"/>
		</Mouse>
		<GameController>
			<ControllerButton buttonCode="A"/>
		</GameController>
	</ActionButton>
	
	<ActionButton name="ExitGame">
		<Keyboard>
			<KeyboardButton keyCode="Esc"/>
		</Keyboard>	
	</ActionButton>
	
	<ActionButton name="ReloadGame">
		<Keyboard>
			<KeyboardButton keyCode="F2"/>
		</Keyboard>	
	</ActionButton>
	
	<ActionButton name="DebugPhysics">
		<Keyboard>
			<KeyboardButton keyCode="F3"/>
		</Keyboard>	
	</ActionButton>
	
	<ActionButton name="StrongAttackInput">
		<Mouse>
			<MouseButton buttonCode="RightButton"/>
		</Mouse>
		<GameController>
			<ControllerButton buttonCode="B"/>
		</GameController>
	</ActionButton>
	
	<ActionButton name="DodgeInput">
		<Keyboard>
			<ActionKey keyCode="Space"/>
		</Keyboard>		
		<GameController>
			<ControllerButton buttonCode="X"/>
		</GameController>
	</ActionButton>	
</InputSettings>