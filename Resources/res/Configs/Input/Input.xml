<InputSettings>
	<Axis name="VerticalMovement">		
		<Keyboard>		
			<KeyboardAxis keyCodeFrom="W" keyCodeTo="S" valueFrom="1" valueTo="-1"/>			
		</Keyboard>
	</Axis>
	<Axis name="HorizontalMovement">		
		<Keyboard>		
			<KeyboardAxis keyCodeFrom="A" keyCodeTo="D" valueFrom="-1" valueTo="1"/>						
		</Keyboard>
	</Axis>
	
	<ActionButton name="LightAttackInput">
		<Mouse>
			<MouseButton buttonCode="LeftButton"/>
		</Mouse>
	</ActionButton>
	
	<ActionButton name="StrongAttackInput">		
		<Mouse>
			<MouseButton buttonCode="RightButton"/>
		</Mouse>
	</ActionButton>
	
	<ActionButton name="DodgeInput">
		<Keyboard>
			<ActionKey keyCode="Space"/>
		</Keyboard>		
	</ActionButton>
	
</InputSettings>